---
const { title, code } = Astro.props;
import Mode from "./Mode.astro";
import Symbols from "./Symbols.astro";
---

<div class="header">
  <h1 class="header__title">{title}</h1>
  <Symbols code={code} />
  <Mode />
  <nav class="header__nav">
    <span class="header__nav-item"><a href="/overall">Home</a></span>
  </nav>
</div>

<style>
  .header {
    background-color: #333;
    color: #fff;
    padding: 20px;
    position: sticky;
    top: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header__title {
    margin: 0;
    font-size: 24px;
  }

  .header__nav-item {
    margin-right: 10px;
  }

  .header__nav-item a {
    color: #fff;
    text-decoration: none;
  }
</style>
