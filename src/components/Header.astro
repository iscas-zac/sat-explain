---
const { title, code } = Astro.props;
import Symbols from "./Symbols.astro";
---

<div class="header">
    <h1 class="header__title">{ title }</h1>
    <Symbols code={ code }/>
    <nav class="header__nav">
        <ul class="header__nav-list">
            <li class="header__nav-item"><a href="/overall">Home</a></li>
        </ul>
    </nav>
</div>

<style>
.header {
  background-color: #333;
  color: #fff;
  padding: 20px;
  position: sticky;
  top: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header__title {
  margin: 0;
  font-size: 24px;
}

.header__nav-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
}

.header__nav-item {
  margin-right: 10px;
}

.header__nav-item a {
  color: #fff;
  text-decoration: none;
}
</style>